package com.Passport;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;

public class Applicant {
	
	Log logger = LogFactory.getLog(Applicant.class);
	
	public void pEligibility() throws InvalidAge, Nationality, CriminalRecord {
		boolean eligible=checkApplicantforPass();
	}
	
	private String name;
	private int age;
	private String nationality;
	private String criminalRecord;

	public Applicant(String name, int age, String nationality, String criminalRecord) {
		super();
		this.name = name;
		this.age = age;
		this.nationality = nationality;
		this.criminalRecord = criminalRecord;
	}

	@Override
	public String toString() {
		return "Applicant [name=" + name + ", age=" + age + ", nationality=" + nationality + ", criminalRecord="
				+ criminalRecord + "]";
	}
	
	public boolean checkApplicantforPass() throws InvalidAge, Nationality, CriminalRecord {
		
	}
	
	
	

}
